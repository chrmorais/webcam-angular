vendor-prefixes ?= webkit moz official
@import 'nib'
b_silver = #ddd

body
  font-family 'Helvetica'
  font-size 16px
  height 100%
  overflow hidden

canvas
  position absolute
  right 0
  bottom 0
  width 120px
  height 100px

.center-block
  float none !important

.row-no-padding
  margin-left 0
  margin-right 0
  [class*="col-"]
    padding-left 0 !important
    padding-right 0 !important

.camera
  width 100%
  height 100%
  float left

#timer
  float left
  position absolute
  top 50%
  left 50%
  width 100px
  font-size 70px
  font-weight bold
  color #FFF

.blink_me
  animation-name blinker
  animation-duration 1s
  animation-timing-function linear
  animation-iteration-count 1

$keyframe-name = blinker
@keyframes {$keyframe-name}
  0%
    opacity 1.0
  50%
    opacity 0.0
  100%
    opacity 1.0
